				%ul.fondo-color.collapsible{:data=>{:collapsible=>"acordion"}}
					%li#lista
						.collapsible-header <i class="material-icons right" id="flecha_up_down"> expand_more </i> Matricula
						.collapsible-body
							.row
								.col.s8.input-field
									%input.validate#matricula{:type => "text"}/
									%label.active{:for => "matricula"} Id
								.col.s8.input-field
									%input.validate#nombre{:type => "text"}/
