!!!5
%html{:lang => "es"}
	%head
		%meta{:name => "viewport", :content=>"width=device-width, initial-scale=1"}
		%meta{:charset=> "UTF-8"}
		%link{:rel => "shortcut icon", :type=>"image/x-icon", :href => "../../images/favicon.ico"}/
		-#google icons
		%link{:rel => "stylesheet", :href => "http://fonts.googleapis.com/icon?family=Material+Icons"}/
		%link{:rel => "stylesheet", :href => "../../css/materialize.css", :media => "screen,projection"}/		
		%link{:rel => "stylesheet", :href => "../../css/style.css"}/
		%link{:rel => "stylesheet", :href => "../../css/animate.css"}/
		%title Gliphy Admin
	%body
		.navbar-fixed
			%nav.negro-flat
				.nav-wrapper
					.container
						%a.brand-logo.hide-on-med-and-down GliphyHub ADMIN
						.dropdown-button{:data=>{:activates=>"dropdown1"}}
							%a.right.manita
								%i.material-icons.right arrow_drop_downs
							%a.right
								.row.manita.no-margin
									.col.s2
										%img.circle.dropdown-button{:src => "../../images/admin.jpg", :alt => "avatar"}/
									.col.9
										%span.info Nombre_ApellidoP_ApellidoM
										%span.info.separado administrador
			%ul#dropdown1.dropdown-content
				%li
					%a{:href => "#!"} Mi perfil
				%li
					%a{:href => "#!"} Salir <i class="material-icons left rojo"> power_settings_new </i>
			.fixed-action-btn.toolbar
				%a.btn-floating.btn-large.bar-menu-color.center
					%i.material-icons add
				%ul
					%li
						%a.waves-effect.waves-light{:href => "#!"}
							%i.material-icons insert_chart
					%li
						%a.waves-effect.waves-light{:href => "#!"}
							%i.material-icons format_quote
					%li
						%a.waves-effect.waves-light{:href => "#!"}
							%i.material-icons publish
					%li
						%a.waves-effect.waves-light{:href => "#!"}
							%i.material-icons attach_file
		.row
			.col.s1.hide-on-med-and-down
			.col.s1.bar-menu-color.center.fixed.hide-on-med-and-down
				%ul
					%li
						%a.waves-effect.waves-light.btn-floating.btn-flat{:href => "#!"} <i class="material-icons"> storage </i>
					%li
						%a.waves-effect.waves-light.btn-floating.btn-flat{:href => "#!"} <i class="material-icons"> account_circle </i>
					%li
						%a.waves-effect.waves-light.btn-floating.btn-flat{:href => "#!"} <i class="material-icons"> add </i>
					%li
						%a.waves-effect.waves-light.btn-floating.btn-flat{:href => "#!"} <i class="material-icons"> search </i>
					%li
						%a.waves-effect.waves-light.btn-floating.btn-flat{:href => "#!"} <i class="material-icons"> error </i>
			.col.s11{:style=>"margin: 1.5rem 0"}
				.row
					.col.s6
